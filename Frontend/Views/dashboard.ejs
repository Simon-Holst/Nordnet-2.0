<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <script src="/js/sidebar.js"></script>

    <button id="toggleSidebar">‚ò∞ Menu</button>

    <div class="sidebar">
        <div class="sidebar-title-box">
        <img src="/Pig-logo.png" alt="Pig Logo" class="sidebar-header-logo">
        <h2>PortfolioTracker</h2>
        </div>
        <a href="/dashboard" class="sidebar-logo"> <img src="/Dashboard-logo.png" alt="Dashboard Logo">Dashboard</a>
        <a href="/accounts" class="sidebar-logo"> <img src="/Accounts-logo.png" alt="Accounts Logo">Accounts</a>
        <a href="/portfolios/view" class="sidebar-logo"> <img src="/Portfolios-logo.png" alt="Portfolios Logo">Portfolios</a>
        <a href="/logout" class="logout-btn">Log out</a>
        <button id="closeSidebar"> Close</button>
    </div>

    <div class="main-content">
        <h1>Welcome, <%= username %> üëã</h1>

        <div class="top-cards">
            <div class="card">
                <p class="card-title">Total value</p>
                <p class="card-value"><%= totalValueDKK %> DKK</p>
            </div>
            <div class="card">
                <p class="card-title">Realized profit</p>
                <p class="card-value"><%= realizedProfitDKK %> DKK</p>
            </div>
            <div class="card">
                <p class="card-title">Unrealized profit</p>
                <p class="card-value"><%= unrealizedProfitDKK %> DKK</p>
            </div>
        </div>

        <!-- Wrapper til tabeller -->
        <div class="tables-wrapper">
            <div class="table-container">
                <h2>Top 5 v√¶rdipapirer baseret p√• v√¶rdi</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Portfolio</th>
                            <th>24h change</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topByValue.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.portfolio %></td>
                                <td>-</td> <!-- Du kan opdatere 24h change senere -->
                                <td><%= item.valueDKK %> DKK</td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="table-container">
                <h2>Top 5 v√¶rdipapirer baseret p√• profit</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Portfolio</th>
                            <th>24h change</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topByProfit.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.portfolio %></td>
                                <td>-</td>
                                <td><%= item.profitDKK %> DKK</td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</body>
</html>
